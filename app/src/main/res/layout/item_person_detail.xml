<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/device_shape_shadow_10"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_title_name"
            style="@style/person_style"
            android:layout_marginLeft="15dp"
            android:text="入住人姓名"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_content_name"
            style="@style/person_style"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toStartOf="@id/tv_real_name"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_real_name"
            style="@style/person_style"
            android:layout_width="60dp"
            android:layout_height="17dp"
            android:background="@drawable/bg_all_frame"
            android:textSize="11sp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/theme_blue"
            android:text="已实名"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_title_sex"
            style="@style/person_style"
            android:layout_marginLeft="15dp"
            android:text="性别"
            app:layout_constraintTop_toBottomOf="@id/tv_title_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_content_sex"
            style="@style/person_style"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_title_id"
            style="@style/person_style"
            android:layout_marginLeft="15dp"
            android:text="证件号码"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sex"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_content_id"
            style="@style/person_style"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_sex"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_title_phone"
            style="@style/person_style"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="手机号码"
            app:layout_constraintTop_toBottomOf="@id/tv_title_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_content_phone"
            style="@style/person_style"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
