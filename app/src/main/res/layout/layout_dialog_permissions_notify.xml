<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="288dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_permission_notify">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clyt_top"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/shape_top_5_2ebaff_6195ff"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/icon_permission"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="开启位置权限"
            android:textColor="#ff018aff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_permission"
            />
        <TextView
            android:id="@+id/tv_permission_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="可以在下述场景体验更优质的服务"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_permission"
            android:layout_marginTop="4dp"
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="权限用于："
        android:textColor="#ff333333"
        android:textSize="13sp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/clyt_top"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_permission_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tv_label"/>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_permission_btn"
        android:text="我知道了"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_permission_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="您可以前往“设置-权限管理”修改相应权限"
        android:textColor="#999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>