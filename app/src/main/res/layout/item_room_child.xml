<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:clickable="true"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:id="@+id/layout_wrapper"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/room_kx"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_room_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:text="房号:502"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <TextView
                        android:id="@+id/tv_room_floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_F47F72"
                        android:textSize="13sp"
                        tools:text="房号:502"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <TextView
                        android:id="@+id/tv_room_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_F47F72"
                        android:textSize="13sp"
                        tools:text="房号:502"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <TextView
                        android:id="@+id/tv_room_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        android:textColor="@color/text_secondary_color"
                        android:textSize="13sp"
                        tools:text="房号:502"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        tools:ignore="DisableBaselineAlignment">

                        <ImageView
                            android:id="@+id/iv_dot"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginTop="18dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_checkin_free"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/text_secondary_color"
                            android:textSize="13sp"
                            android:visibility="visible"
                            tools:text="入住时间"
                            tools:ignore="HardcodedText,UnusedAttribute" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_check_in"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/order_circle_corner"
                        android:textSize="13sp"
                        android:text="预定"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
