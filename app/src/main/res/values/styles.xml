<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="cloud_popup_choicepic_anim_style">
        <item name="android:windowEnterAnimation">@anim/cloud_popup_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/cloud_popup_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="account_input_info_shape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <style name="account_input_info_content" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
        <item name="android:textColorHint">#ccc</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="account_input_info_err_hint" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:gravity">start|top</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="BottomBlueBtnStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bottom_blue_btn_bg_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- indicator -->
    <!-- 设置显示器颜色 -->
    <attr name="cloud_indicator_color" format="color" />
    <!-- 设置字体选中颜色 -->
    <attr name="cloud_indicator_select_color" format="color" />
    <!-- 设置字体未选中颜色 -->
    <attr name="cloud_indicator_unselect_color" format="color" />
    <!-- 设置显示器高度 -->
    <attr name="cloud_indicator_height" format="dimension" />
    <!-- 设置显示器固定宽度 -->
    <attr name="cloud_indicator_width" format="dimension" />
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="cloud_indicator_margin_left" format="dimension" />
    <attr name="cloud_indicator_margin_top" format="dimension" />
    <attr name="cloud_indicator_margin_right" format="dimension" />
    <attr name="cloud_indicator_margin_bottom" format="dimension" />
    <!-- 设置显示器圆角弧度-->
    <attr name="cloud_indicator_corner_radius" format="dimension" />
    <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
    <attr name="cloud_indicator_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>
    <!-- 设置显示器为常规|三角形|背景色块|-->
    <attr name="cloud_indicator_style" format="enum">
        <enum name="NORMAL" value="0" />
        <enum name="TRIANGLE" value="1" />
        <enum name="BLOCK" value="2" />
    </attr>
    <!-- 背景色块选择器-->
    <attr name="cloud_indicator_drawable_select" format="reference" />
    <attr name="cloud_indicator_drawable_unselect" format="reference" />
    <!-- 设置显示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
    <attr name="cloud_indicator_width_equal_title" format="boolean" />
    <!-- 设置显示器支持动画-->
    <attr name="cloud_indicator_anim_enable" format="boolean" />
    <!-- 设置显示器动画时间-->
    <attr name="cloud_indicator_anim_duration" format="integer" />
    <!-- 设置显示器支持动画回弹效果-->
    <attr name="cloud_indicator_bounce_enable" format="boolean" />

    <!-- underline -->
    <!-- 设置下划线颜色 -->
    <attr name="cloud_underline_color" format="color" />
    <!-- 设置下划线高度 -->
    <attr name="cloud_underline_height" format="dimension" />
    <!-- 设置下划线上方还是下方-->
    <attr name="cloud_underline_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>

    <!-- divider -->
    <!-- 设置分割线颜色 -->
    <attr name="cloud_divider_color" format="color" />
    <!-- 设置分割线宽度 -->
    <attr name="cloud_divider_width" format="dimension" />
    <!-- 设置分割线的paddingTop和paddingBottom -->
    <attr name="cloud_divider_padding" format="dimension" />

    <!-- tab -->
    <!-- 设置tab的paddingLeft和paddingRight -->
    <attr name="cloud_tab_padding" format="dimension" />
    <!-- 设置tab大小等分 -->
    <attr name="cloud_tab_space_equal" format="boolean" />
    <!-- 设置tab固定大小 -->
    <attr name="cloud_tab_width" format="dimension" />

    <!-- title -->
    <!-- 设置字体大小 -->
    <attr name="cloud_textSize" format="dimension" />
    <attr name="cloud_textSelectSize" format="dimension" />
    <!-- 设置字体选中颜色 -->
    <attr name="cloud_textSelectColor" format="color" />
    <!-- 设置字体未选中颜色 -->
    <attr name="cloud_textUnselectColor" format="color" />
    <!-- 设置字体加粗 -->
    <attr name="cloud_textBold" format="enum">
        <enum name="NONE" value="0" />
        <enum name="SELECT" value="1" />
        <enum name="BOTH" value="2" />
    </attr>
    <!-- 设置字体全大写 -->
    <attr name="cloud_textAllCaps" format="boolean" />

    <declare-styleable name="CloudTabLayout">
        <!-- indicator -->
        <attr name="cloud_indicator_color" />
        <attr name="cloud_indicator_select_color" />
        <attr name="cloud_indicator_unselect_color" />
        <attr name="cloud_indicator_height" />
        <attr name="cloud_indicator_width" />
        <attr name="cloud_indicator_margin_left" />
        <attr name="cloud_indicator_margin_top" />
        <attr name="cloud_indicator_margin_right" />
        <attr name="cloud_indicator_margin_bottom" />
        <attr name="cloud_indicator_corner_radius" />
        <attr name="cloud_indicator_gravity" />
        <attr name="cloud_indicator_style" />
        <attr name="cloud_indicator_width_equal_title" />
        <attr name="cloud_indicator_drawable_select" />
        <attr name="cloud_indicator_drawable_unselect" />

        <!-- underline -->
        <attr name="cloud_underline_color" />
        <attr name="cloud_underline_height" />
        <attr name="cloud_underline_gravity" />

        <!-- divider -->
        <attr name="cloud_divider_color" />
        <attr name="cloud_divider_width" />
        <attr name="cloud_divider_padding" />

        <!-- tab -->
        <attr name="cloud_tab_padding" />
        <attr name="cloud_tab_space_equal" />
        <attr name="cloud_tab_width" />

        <!-- title -->
        <attr name="cloud_textSize" />
        <attr name="cloud_textSelectSize" />
        <attr name="cloud_textSelectColor" />
        <attr name="cloud_textUnselectColor" />
        <attr name="cloud_textBold" />
        <attr name="cloud_textAllCaps" />

    </declare-styleable>

    <declare-styleable name="CloudTabView">
        <!-- 圆角矩形背景色 -->
        <attr name="ctv_backgroundColor" format="color" />
        <!-- 圆角弧度,单位dp-->
        <attr name="ctv_cornerRadius" format="dimension" />
        <!-- 圆角弧度,单位dp-->
        <attr name="ctv_strokeWidth" format="dimension" />
        <!-- 圆角边框颜色-->
        <attr name="ctv_strokeColor" format="color" />
        <!-- 圆角弧度是高度一半-->
        <attr name="ctv_isRadiusHalfHeight" format="boolean" />
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="ctv_isWidthHeightEqual" format="boolean" />
    </declare-styleable>

    <style name="GalleryNoTitleTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NetworkDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--上传操作弹窗-->
    <style name="UploadActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <!--        <item name="android:windowMinWidthMinor">100%</item>-->
    </style>

    <declare-styleable name="CloudMaxHeightRecyclerView">
        <attr name="cloud_maxHeight" format="dimension" />
    </declare-styleable>

    <attr name="cloud_radius" format="dimension" />
    <declare-styleable name="CloudSquareImageView">
        <attr name="cloud_radius"/>
    </declare-styleable>

    <declare-styleable name="CloudRoundImageView">
        <attr name="cloud_radius"/>
    </declare-styleable>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/list_divider_color</item>
    </style>

    <!-- 入住人信息 -->
    <style name="person_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/text_secondary_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--自定义dialog文字信息-->
    <style name="Dialog" parent="android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowSoftInputMode">stateAlwaysVisible</item>&lt;!&ndash;显示软件盘&ndash;&gt;-->
    </style>

    <!--自定义dialog文字信息-->
    <style name="Dialog_Soft" parent="android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item><!--显示软件盘-->
    </style>


    <!--LoadingDialog-->
    <style name="TransDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:background">@color/colorWhite</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--NoTransDialog样式-->

    <!--SaveLoadingDialog-->
    <style name="TransSaveDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:background">@color/colorWhite</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!-- 手机号键盘-->
    <style name="PhoneStyle">
        <item name="android:inputType">phone</item>
        <item name="android:digits">1234567890</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!-- 身份证号码键盘-->
    <style name="IdCardStyle">
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789xyzXYZ</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="PermissionDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="menu_animation">
        <item name="android:windowEnterAnimation">@anim/menu_appear</item>
        <item name="android:windowExitAnimation">@anim/menu_disappear</item>
    </style>

    <style name="UiComponents.Switch.Style1" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/uicomponents_switch_thumb</item>
        <item name="track">@drawable/uicomponents_switch_track</item>
        <item name="colorControlActivated">@color/color_0085ff</item>
        <item name="colorSwitchThumbNormal">@color/color_0085ff</item>
        <item name="android:colorForeground">@color/color_0085ff</item>
    </style>

    <style name="switch_text">
        <item name="android:textColor">@color/color_0085ff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 自定义默认二维码扫描界面的主题. -->
    <style name="ViewfinderView.Custom">
        <item name="inner_corner_color">#FF9900</item>
        <!--<item name="inner_scan_bitmap">@drawable/ic_qrcode_scanning</item>-->
        <item name="inner_corner_width">6dp</item>
        <item name="inner_scan_bitmap_tint">#FF9900</item>
        <item name="inner_scan_animation_interval">25</item>
    </style>

    <style name="XQRCodeTheme.Custom">
        <item name="ViewfinderViewStyle">@style/ViewfinderView.Custom</item>
    </style>
</resources>